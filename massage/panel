<!doctype html>


    
    
    


    <textarea id="messageInput" placeholder="Type your message here"></textarea>
    <button id="sendMessageButton">Send</button>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const messageInput = document.getElementById('messageInput');
            const sendMessageButton = document.getElementById('sendMessageButton');

            // Function to send a message to the server
            async function sendMessageToServer(message) {
                try {
                    const response = await fetch('https://e88acd8b-7a0f-42e0-b933-504ff9636c62-00-2331m38h2jm4.picard.replit.dev:3000/send-message', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ message })
                    });
                    const data = await response.json();
                    console.log(data); // Log the response from the server
                    alert(data.status); // Show alert for successful message send
                } catch (error) {
                    console.error('Error sending message to server:', error);
                    alert('Error sending message. Please try again.'); // Show alert for error
                }
            }

            // Add event listener to the send message button
            sendMessageButton.addEventListener('click', () => {
                const message = messageInput.value.trim();
                if (message !== '') {
                    sendMessageToServer(message);
                    messageInput.value = ''; // Clear the input field
                } else {
                    alert('Please enter a message.');
                }
            });
        });
    </script>

</!doctype>
